{
  "info": {
    "name": "BuriLive API v2",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health",
      "item": [
        {
          "name": "GET /health",
          "request": { "method": "GET", "url": "{{baseUrl}}/health" }
        }
      ]
    },
    {
      "name": "Auth",
      "item": [
        {
          "name": "GET /auth/verify (returns isFirstOpen)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/auth/verify",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "verify"],
              "query": [
                { "key": "user", "value": "{\"id\":12345}", "description": "JSON string of Telegram user" },
                { "key": "start_param", "value": "utm_source=vk&utm_campaign=launch" },
                { "key": "auth_date", "value": "1735862400" },
                { "key": "hash", "value": "REPLACE_WITH_REAL_HASH" }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Events",
      "item": [
        {
          "name": "POST /events",
          "request": {
            "method": "POST",
            "header": [ { "key": "Content-Type", "value": "application/json" } ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": 12345,\n  \"name\": \"paywall_view\",\n  \"properties\": { \"utm_source\": \"vk\" }\n}"
            },
            "url": "{{baseUrl}}/events"
          }
        }
      ]
    },
    {
      "name": "Payments",
      "item": [
        {
          "name": "POST /payments/webhook",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "x-idempotency-key", "value": "ik_1" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"provider\": \"mock\",\n  \"providerId\": \"p_1\",\n  \"userId\": 12345,\n  \"product\": \"monthly\",\n  \"amount\": 7900,\n  \"currency\": \"RUB\",\n  \"status\": \"succeeded\"\n}"
            },
            "url": "{{baseUrl}}/payments/webhook"
          }
        }
      ]
    },
    {
      "name": "Entitlements",
      "item": [
        {
          "name": "GET /entitlements/:userId",
          "request": { "method": "GET", "url": "{{baseUrl}}/entitlements/12345" }
        }
      ]
    },
    {
      "name": "Promo",
      "item": [
        {
          "name": "POST /promo/redeem",
          "request": {
            "method": "POST",
            "header": [ { "key": "Content-Type", "value": "application/json" } ],
            "body": { "mode": "raw", "raw": "{\n  \"userId\": 12345,\n  \"promoId\": \"BURI79\"\n}" },
            "url": "{{baseUrl}}/promo/redeem"
          }
        }
      ]
    },
    {
      "name": "Content",
      "item": [
        { "name": "GET /content/onboarding", "request": { "method": "GET", "url": "{{baseUrl}}/content/onboarding" } },
        { "name": "GET /content/lesson1", "request": { "method": "GET", "url": "{{baseUrl}}/content/lesson1?userId=12345" } },
        { "name": "GET /content/paywall", "request": { "method": "GET", "url": "{{baseUrl}}/content/paywall?userId=12345" } }
      ]
    },
    {
      "name": "Admin Content",
      "item": [
        {
          "name": "POST /admin/content/modules",
          "request": {
            "method": "POST",
            "header": [ { "key": "Content-Type", "value": "application/json" } ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": 12345,\n  \"moduleRef\": \"a0.travel\",\n  \"level\": \"A0\",\n  \"title\": \"Travel A0\",\n  \"tags\": [\"travel\"],\n  \"order\": 1,\n  \"published\": true\n}"
            },
            "url": "{{baseUrl}}/admin/content/modules"
          }
        },
        {
          "name": "GET /admin/content/modules",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/admin/content/modules?userId=12345&level=A0"
          }
        },
        {
          "name": "PATCH /admin/content/modules/:moduleRef",
          "request": {
            "method": "PATCH",
            "header": [ { "key": "Content-Type", "value": "application/json" } ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": 12345,\n  \"title\": \"Travel A0 Updated\",\n  \"published\": false\n}"
            },
            "url": "{{baseUrl}}/admin/content/modules/a0.travel"
          }
        },
        {
          "name": "POST /admin/content/lessons",
          "request": {
            "method": "POST",
            "header": [ { "key": "Content-Type", "value": "application/json" } ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": 12345,\n  \"moduleRef\": \"a0.travel\",\n  \"lessonRef\": \"a0.travel.001\",\n  \"title\": \"At the airport\",\n  \"estimatedMinutes\": 10,\n  \"order\": 1,\n  \"published\": true,\n  \"tasks\": [\n    { \"ref\": \"a0.travel.001.t1\", \"type\": \"choice\", \"data\": { \"q\": \"Hello?\", \"a\": [\"Hi\"] } }\n  ]\n}"
            },
            "url": "{{baseUrl}}/admin/content/lessons"
          }
        },
        {
          "name": "GET /admin/content/lessons",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/admin/content/lessons?userId=12345&moduleRef=a0.travel"
          }
        },
        {
          "name": "PATCH /admin/content/lessons/:lessonRef",
          "request": {
            "method": "PATCH",
            "header": [ { "key": "Content-Type", "value": "application/json" } ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": 12345,\n  \"title\": \"Airport basics\",\n  \"published\": true\n}"
            },
            "url": "{{baseUrl}}/admin/content/lessons/a0.travel.001"
          }
        }
      ]
    },
    {
      "name": "Analytics",
      "item": [
        { "name": "GET /admin/analytics/funnel", "request": { "method": "GET", "url": "{{baseUrl}}/admin/analytics/funnel?utm_source=vk" } },
        { "name": "GET /admin/analytics/revenue", "request": { "method": "GET", "url": "{{baseUrl}}/admin/analytics/revenue?utm_source=vk" } }
      ]
    },
    {
      "name": "Profile",
      "item": [
        { "name": "GET /profile/:userId", "request": { "method": "GET", "url": "{{baseUrl}}/profile/12345" } },
        {
          "name": "PATCH /profile",
          "request": {
            "method": "PATCH",
            "header": [ { "key": "Content-Type", "value": "application/json" } ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": 12345,\n  \"firstName\": \"Dashi\",\n  \"languageCode\": \"ru\"\n}"
            },
            "url": "{{baseUrl}}/profile"
          }
        },
        {
          "name": "PATCH /profile/onboarding/complete",
          "request": {
            "method": "PATCH",
            "header": [ { "key": "Content-Type", "value": "application/json" } ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": 12345,\n  \"englishLevel\": \"A1\",\n  \"learningGoals\": [\"travel\", \"speaking\"]\n}"
            },
            "url": "{{baseUrl}}/profile/onboarding/complete"
          }
        }
      ]
    },
    {
      "name": "Progress",
      "item": [
        {
          "name": "POST /progress/sessions/start",
          "request": {
            "method": "POST",
            "header": [ { "key": "Content-Type", "value": "application/json" } ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": 12345,\n  \"moduleRef\": \"a0.travel\",\n  \"lessonRef\": \"a0.travel.001\",\n  \"source\": \"home\"\n}"
            },
            "url": "{{baseUrl}}/progress/sessions/start"
          }
        },
        {
          "name": "POST /progress/sessions/:sessionId/end",
          "request": {
            "method": "POST",
            "header": [ { "key": "Content-Type", "value": "application/json" } ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": 12345,\n  \"extraXp\": 0\n}"
            },
            "url": "{{baseUrl}}/progress/sessions/ps_1/end"
          }
        },
        {
          "name": "POST /progress/submit-answer",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Idempotency-Key", "value": "{{idempotencyKey}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"lessonRef\": \"a0.travel.001\",\n  \"taskRef\": \"a0.travel.001.t1\",\n  \"userAnswer\": \"Hello\",\n  \"lastTaskIndex\": 0,\n  \"isLastTask\": false\n}"
            },
            "url": "{{baseUrl}}/progress/submit-answer"
          }
        },
        {
          "name": "GET /progress/stats/daily/:userId",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/progress/stats/daily/12345?limit=14"
          }
        },
        {
          "name": "GET /progress/xp/:userId",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/progress/xp/12345?limit=50"
          }
        },
        {
          "name": "GET /progress/lessons/:userId",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/progress/lessons/12345?status=completed"
          }
        }
      ]
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "https://burlive.ru/api/v2" },
    { "key": "idempotencyKey", "value": "test-idempotency-key" }
  ]
}

